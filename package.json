{
  "name": "resume-manager",
  "version": "1.0.0",
  "description": "It's a project to easily manage resum√© for different jobs",
  "main": "index.js",
  "scripts": {
    "predev": "npm run services:up && npm run wait-for-db && npm run migrations:up",
    "dev": "next dev",
    "lint:style:check": "prettier --check .",
    "lint:style:fix": "prettier --write .",
    "migrations:create": "drizzle-kit generate --config=infra/database/drizzle.config.ts",
    "migrations:up": "tsx infra/database/migrate.ts",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:down": "docker compose -f infra/compose.yaml down",
    "test": "jest --runInBand --verbose",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "wait-for-db": "tsx infra/scripts/wait-for-db.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "drizzle-orm": "^0.32.0",
    "next": "^14.2.4",
    "pg": "^8.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "20.14.2",
    "@types/pg": "^8.11.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "drizzle-kit": "^0.23.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.2.3",
    "tsx": "^4.16.2",
    "typescript": "5.4.5"
  }
}
