{
  "name": "resume-manager",
  "version": "1.0.0",
  "description": "It's a project to easily manage resum√© for different jobs",
  "main": "index.js",
  "scripts": {
    "predev": "npm run services:up && npm run wait-for-db && npm run migrations:up && npm run db:seed",
    "db:seed": "tsx infra/scripts/seeds.ts",
    "dev": "next dev",
    "lint:style:check": "prettier --check .",
    "lint:style:fix": "prettier --write .",
    "lint:quality:check": "next lint --dir .",
    "migrations:create": "drizzle-kit generate --config=infra/database/drizzle.config.ts",
    "migrations:up": "tsx infra/database/migrate.ts",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:down": "docker compose -f infra/compose.yaml down",
    "test": "npm run services:up && concurrently \"next dev\" \"jest --runInBand --verbose --detectOpenHandles\" -n next,jest --hide next -k -s command-jest",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "wait-for-db": "tsx infra/scripts/wait-for-db.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "drizzle-orm": "^0.32.0",
    "humps": "^2.0.1",
    "next": "^14.2.4",
    "pg": "^8.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/async-retry": "^1.4.8",
    "@types/bcrypt": "^5.0.2",
    "@types/humps": "^2.0.6",
    "@types/jest": "^29.5.12",
    "@types/node": "20.14.2",
    "@types/pg": "^8.11.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "async-retry": "^1.3.3",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.23.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.2.3",
    "tsx": "^4.16.2",
    "typescript": "^5.4.5"
  }
}
